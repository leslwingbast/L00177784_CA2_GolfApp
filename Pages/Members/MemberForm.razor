@using Data;

<EditForm Model="@mem" OnValidSubmit="@OnValidSubmit">
    <div class="form-group">
        <label>First Name :</label>
        <div>
            <InputText @bind-Value="@mem.FirstName" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Last Name :</label>
            <div>
                <InputText @bind-Value="@mem.LastName" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@mem.Email" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Phone No. :</label>
            <div>
                <InputText placeholder="086-1234567" @bind-Value="@mem.Phone" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Sex :</label>
            <div>
                <InputSelect @bind-Value="@mem.Sex">
                    <option selected value="@mem.Sex">@mem.Sex</option>
                <option value="Female">Female</option>
                <option value="Male">Male</option>
                </InputSelect>
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Handicap :</label>
            <div>
                <InputNumber @bind-Value="@mem.Handicap"/>
            </div>
        </div>
    </div>
    <br />

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public GolfMember mem { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
